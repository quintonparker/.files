alias ls='ls -G'
alias grep='grep --colour=auto'
alias zgrep='zgrep --colour=auto'
alias ack='ack --colour --break --group'
alias less='less -R'
alias diffsbs='diff --recursive --side-by-side --suppress-common-lines --speed-large-files'
alias diffsbsws='diffsbs --strip-trailing-cr --ignore-blank-lines --ignore-all-space'

alias x="chmod -v +x"
alias v="vim"
alias c="clear"
alias l='ls -ltaho'
alias f='mdfind'

alias watch='watch --differences'
alias which='which -a'

alias mysql='mysql --auto-vertical-output --show-warnings --prompt="\U:\d> "'

if [[ `which hub` != "hub not found" ]]
then
    eval "$(hub alias -s)"
fi
